    <script>
      const swiper = new Swiper('.results-slider', {
        direction: 'horizontal',
        loop: true,
        autoplay: {
          delay: 5000,
        },

        // デフォルト（スマホ）
        slidesPerView: 1,
        spaceBetween: 16,

        // 画面幅ごとの設定
        breakpoints: {
          768: {          // タブレット以上
            slidesPerView: 2,
            spaceBetween: 24,
          },
          1024: {         // PC
            slidesPerView: 3,
            spaceBetween: 32,
          },
        },

        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.swiper-button-next',
